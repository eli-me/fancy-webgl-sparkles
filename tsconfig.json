{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "module": "ES2022",
    "moduleResolution": "Node",
    "removeComments": true,
    "target": "ES2022",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    "noImplicitThis": true,
    "declaration": false,
    "rootDir": "lib",
    "outDir": "dist",
    "strictPropertyInitialization": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "lib/*"
      ]
    }
  },
  "include": [
    "lib/**/*.ts",
    "types.d.ts"
  ],
  "exclude": [
    "dist",
    ".vscode",
    ".idea",
    "docs",
    "res"
  ]
}
